---
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<div class="grid grid-cols-[repeat(auto-fit,_minmax(300px,_1fr))] gap-10 py-5">
    {
        projects.map((project) => {
            return (
                <a href={`/projects/${project.id}`}>
                    <div class="bg-white dark:bg-black outline-black dark:outline-white outline-[2px] shadow-xl dark:shadow dark:shadow-white transition duration-300 ease-in-out hover:shadow-2xl hover:scale-103 dark:hover:shadow-md rounded-xl flex flex-col p-4 gap-2 min-h-0">
                        <p class="font-bold text-4xl w-full">
                            {project.data.title}
                        </p>
                        <p class="text-lg italic">{project.data.shortDesc}</p>
                        <div>Status: {project.data.status}</div>
                    </div>
                </a>
            );
        })
    }
</div>
